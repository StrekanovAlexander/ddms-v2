{% extends 'templates/layout.twig' %}

{% block description %}{{ teacher.full_name }} - {{ teacher.content|lower }}{% endblock %}

{% block title %}{{ teacher.full_name }}{% endblock %}

{% block content %}
  {% if teacher|length %}
    <h1>{{ teacher.full_name }}</h1>
    <h5 class="text-firebrick">{{ teacher.content }}</h5>
    <h6>{{ teacher.department.section.title }}: {{ teacher.department.title }}</h6>
  {% if teacher.image|length %}
    <div class="row my-5">
      <div class="col-md-12 col-sm-12">
        <img src="{{ base_url() }}/images/teachers/{{ teacher.image }}" class="img-fluid" alt="{{ teacher.full_name }}">
      </div>
    </div>  
    {% endif %}
  </div>  

  {% endif %}
{% endblock %}