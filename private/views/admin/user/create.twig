{% extends 'templates/layout-admin.twig' %}

{% block title %}
  Створити користувача
{% endblock %}

{% block content %}

<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card-body">
      <h6 class="card-title">Створити користувача</h6>
      <form action="{{ path_for('admin.user.create') }}" method="POST">
        <div class="form-group">
          <label for="username">Логін</label>
          <input class="form-control{{ errors.username ? ' is-invalid' : '' }}" name="username" id="username" value="{{ old.username }}" placeholder="Логін">
          {% if errors.username %}
            <span class="small text-danger">{{ errors.username|first }}</span> 
          {% endif %}  
        </div>
        <div class="form-group">
          <label for="password">Пароль</label>
          <input class="form-control{{ errors.username ? ' is-invalid' : '' }}" name="password" id="password" value="" type="password" placeholder="Пароль">
          {% if errors.password %}
            <span class="small text-danger">{{ errors.password|first }}</span> 
          {% endif %}  
        </div>
        <div class="form-group">
          <label for="password2">Пароль (повтор)</label>
          <input class="form-control{{ errors.username ? ' is-invalid' : '' }}" name="password2" id="password2" type="password" placeholder="Пароль (повтор)">
          {% if errors.password2 %}
            <span class="small text-danger">{{ errors.password2|first }}</span> 
          {% endif %}  
        </div>
        <div class="form-group">
          <div class="form-check">
            <label for="is_teacher" class="form-check-label">
              <input type="checkbox" class="form-check-input" name="is_teacher" id="is_teacher">Викладач
            </label>
          </div>
        </div>
        <div class="form-group">
          <div class="form-check">
            <label for="is_actual" class="form-check-label">
              <input type="checkbox" class="form-check-input" name="is_actual" id="is_actual">Актуальність
            </label>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-dark btn" type="submit">Записати</button>
        </div>  
        {{ csrf.fields|raw }}
      </form>
    </div>
  </div>
</div>

{% endblock %}