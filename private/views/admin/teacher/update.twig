{% extends 'templates/layout-admin.twig' %}

{% block title %}Редагування викладача {{ teacher.full_name }}{% endblock %}

{% block content %}
  {% if teacher|length %}
    <h6 class="my-5">Редагування викладача {{ teacher.full_name }}</h6>
    <form action="#" method="POST">
      <div class="form-group">
        <label for="department_id" class="font-weight-bold">Відділення</label>
        <select class="form-control" name="department_id" id="department_id">
        {% for department in departments %}
          <option value="{{ department.id }}" {{ department.id == teacher.department_id ? 'selected' : '' }}>{{ department.title }}</option>
        {% endfor %}
        </select>
      </div>  

      <div class="form-group">
        <label for="full_name" class="font-weight-bold">Ім'я</label>
        <input class="form-control{{ errors.full_name ? ' is-invalid' : '' }}" name="full_name" id="full_name" value="{{ teacher.full_name }}">
      </div>

      <div class="form-group">
        <label for="content" class="font-weight-bold">Опис</label>
        <textarea class="form-control{{ errors.content ? ' is-invalid' : '' }}" id="content" name="content">{{ teacher.content }}</textarea>
      </div>

      <div class="form-group">
        <label for="rank" class="font-weight-bold">Ранг</label>
        <select class="form-control" name="rank" id="rank">
        {% for i in 1..5 %}
          <option value="{{ i }}" {{ i == teacher.rank ? 'selected' : '' }}>{{ i }}</option>
        {% endfor %}
        </select>
      </div>

      <div class="form-group">
        <div class="form-check">
          <label for="is_actual" class="form-check-label font-weight-bold">
            <input type="checkbox" class="form-check-input" name="is_actual" id="is_actual" {{ teacher.is_actual ? ' checked="checked"' : ''}}>Актуальність
          </label>
        </div>
      </div>

      <input type="hidden" name="id" id="id" value="{{ teacher.id }}">  
      {{ csrf.field|raw }}
    </form> 
  {% endif %}
{% endblock %}